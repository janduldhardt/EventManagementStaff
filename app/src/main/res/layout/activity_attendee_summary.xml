<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendeeSummaryActivity">

    <com.example.eventmanagement19.student_header
        android:id="@+id/student_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<ScrollView
    android:layout_width="match_parent"
    android:fillViewport="true"
    app:layout_constraintTop_toBottomOf="@+id/student_header"
    android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/scrollView_attendee_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/image_attendee_summary"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/scrollView_attendee_summary"
         />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@color/black"
            android:alpha="0.4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/scrollView_attendee_summary"
            />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/bariol_regular"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:singleLine="true"
        android:text="AU CAMP 2018"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_attendee_summary" />

    <TextView
        android:id="@+id/text_attendeeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:text="45"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintRight_toLeftOf="@id/guidelineMiddle"

        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:text="enrolled"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/text_attendeeCount"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@id/text_attendeeCount"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:text="of"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/text_attendeeCount"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/text_attendeeCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:shadowColor="#000000"
        android:shadowRadius="2"
        android:text="60"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/guidelineMiddle"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latest update on 30/01/2019"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_attendee_summary" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:text="Shirt Size"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_attendee_summary" />


    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_shirtS"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

    </com.example.eventmanagement19.custom_button_attendee_summary>

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_shirtL"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_shirtS">

    </com.example.eventmanagement19.custom_button_attendee_summary>

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_shirtXXL"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_shirtL">


    </com.example.eventmanagement19.custom_button_attendee_summary>

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_shirtM"
        android:layout_width="0dp"

        android:layout_height="34dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

    </com.example.eventmanagement19.custom_button_attendee_summary>

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_shirtXL"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/attendee_shirtM">

    </com.example.eventmanagement19.custom_button_attendee_summary>

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_shirt3XL"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/attendee_shirtXL">


    </com.example.eventmanagement19.custom_button_attendee_summary>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Food Type"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_shirtXXL" />



    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_normal"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_islam"

        android:layout_width="0dp"
        android:layout_height="34dp"


        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_normal"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_noEggs"
        android:layout_width="0dp"
        android:layout_height="34dp"


        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_islam"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_noMilk"
        android:layout_width="0dp"
        android:layout_height="34dp"


        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_noEggs"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_noWheat"
        android:layout_width="0dp"
        android:layout_height="34dp"


        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_noMilk"
        app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_vegetarian"
        android:layout_width="0dp"
        android:layout_height="34dp"


        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/guidelineMiddle"
        app:layout_constraintTop_toTopOf="@+id/attendee_food_normal"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_noSpicy"
        android:layout_width="0dp"
        android:layout_height="34dp"

android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_vegetarian"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_noPeanuts"
        android:layout_width="0dp"
        android:layout_height="34dp"

        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_noSpicy"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_noShellfish"
        android:layout_width="0dp"
        android:layout_height="34dp"

        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_noPeanuts"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.example.eventmanagement19.custom_button_attendee_summary
        android:id="@+id/attendee_food_other"
        android:layout_width="0dp"
        android:layout_height="34dp"

        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="@id/guidelineMiddle"
        app:layout_constraintTop_toBottomOf="@+id/attendee_food_noShellfish"
        app:layout_constraintEnd_toEndOf="parent"
        />

    </android.support.constraint.ConstraintLayout>
</ScrollView>




</android.support.constraint.ConstraintLayout>