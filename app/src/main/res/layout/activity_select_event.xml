<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectEventActivity">


    <com.example.eventmanagement19.student_header
        android:id="@+id/student_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.eventmanagement19.student_header>

    <TextView
        android:id="@+id/tv_header_organize_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/bariol_bold"
        android:onClick="onClickSelectEvent"
        android:text="Your Events"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/student_header" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/baseline_add_black_18dp"
        android:tint="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header_organize_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_header_organize_event" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewSelectEvent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_organize_event">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>