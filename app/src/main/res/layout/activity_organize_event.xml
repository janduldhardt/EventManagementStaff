<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizeEventActivity">

    <com.example.eventmanagement19.student_header android:layout_width="0dp"
                                                  android:layout_height="wrap_content"
                                                  android:layout_marginTop="16dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="8dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="8dp"
                                                  android:id="@+id/student_header"
                                                  app:layout_constraintHorizontal_bias="0.0"></com.example.eventmanagement19.student_header>

    <TextView
            android:id="@+id/tv_header_organize_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_bold"
            android:text="Organize Events"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/student_header" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:background="#ECE7E7"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_header_organize_event" android:id="@+id/linearLayout">

        <LinearLayout
                style="@style/OrganizeEventButtonLinearLayoutStyle">

            <ImageView
                    style="@style/OrganizeEventButtonImageStyle"
                    android:src="@color/black"/>

            <TextView
                    style="@style/OrganizeEventButtonTextStyle"
                    android:text="Event Management"
            />

        </LinearLayout>

        <LinearLayout
                style="@style/OrganizeEventButtonLinearLayoutStyle">

            <ImageView
                    style="@style/OrganizeEventButtonImageStyle"
                    android:src="@color/black"/>

            <TextView
                    style="@style/OrganizeEventButtonTextStyle"
                    android:text="Staff Management"/>
        </LinearLayout>

        <LinearLayout
                style="@style/OrganizeEventButtonLinearLayoutStyle">

            <ImageView
                    style="@style/OrganizeEventButtonImageStyle"
                    android:src="@color/black"/>

            <TextView
                    style="@style/OrganizeEventButtonTextStyle"
                    android:text=""/>
        </LinearLayout>

        <LinearLayout
                style="@style/OrganizeEventButtonLinearLayoutStyle">

            <ImageView
                    style="@style/OrganizeEventButtonImageStyle"
                    android:src="@color/black"/>

            <TextView
                    style="@style/OrganizeEventButtonTextStyle"
                    android:text="Staff Management"/>
        </LinearLayout>

        <LinearLayout
                style="@style/OrganizeEventButtonLinearLayoutStyle">

            <ImageView
                    style="@style/OrganizeEventButtonImageStyle"
                    android:src="@color/black"/>

            <TextView
                    style="@style/OrganizeEventButtonTextStyle"
                    android:text="Staff Management"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>